%body
  %section
    = form_for(@propertyinformations, html: { class: "propertyinformations-wizard" }) do |f|
      %section.hbox.stretch.wizard
        %aside
          %section.vbox
            %header.header.bg-white.b-b.clearfix
              .row
                .col-sm-4.col-sm-offset-4.m-b-xs
                  - if Rails.env.development?
                    50% complete
                    .progress.progress-xs{:style => "margin:0"}
                      .progress-bar.bg-info{"data-original-title" => "50%", "data-toggle" => "tooltip", :style => "width: 50%"}
                #save_continue.col-sm-4.text-right
                  = f.submit "Save Changes", class: "btn btn-success"
                  = link_to wizard_property_address_path, class: "btn btn-default" do
                    Continue
            %section.scrollable.wrapper.w-f
              .panel-body
                .add-page
                  .row
                    .col-md-8.col-md-offset-2
                      .top-info
                        %h1 Add Property Information
                        %p Before we begin editing your website, let's save your property's basic information.
                      %h3 Property Information
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :name, "Property Name"
                        = f.text_field :name, class: "form-control", placeholder: "Your Property's name"
                        %p Your property's name.
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :owner_name, "Owner Name"
                        = f.text_field :owner_name, class: "form-control", placeholder: "Your Company name"
                        %p Name of company that owns the property.
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :property_class, "Property Class", class: "control-label"
                        .btn-group.m-r
                          %button.btn.btn-sm.btn-default.dropdown-toggle{"data-toggle" => "dropdown", :style => "padding:7px 16px;"}
                            %span.dropdown-label{"data-placeholder" => "Please select"}= property_class_select
                            %span.caret{:style => "margin-left:30px;"}
                          %ul.dropdown-menu.dropdown-select
                            %li
                              %a{:href => "#"}
                                = f.radio_button :property_class, "A"
                                = "A"
                            %li
                              %a{:href => "#"}
                                = f.radio_button :property_class, "B"
                                = "B"
                            %li
                              %a{:href => "#"}
                                = f.radio_button :property_class, "C"
                                = "C"
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :floors, "Floors"
                        = f.text_field :floors, class: "form-control", placeholder: "Ex. 23"
                        %p Number of floors.
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :sf, "Square Footage"
                        = f.text_field :sf, class: "form-control", placeholder: "Ex. 120000"
                        %p Total rentable square footage.
                      .line.line-dashed.b-b.line-lg.pull-in
                      .form-group
                        = f.label :year_built, "Year Built"
                        = f.text_field :year_built, class: "form-control", placeholder: "Ex. 2010"
                        %p The year the property was built.
  #save_continue_tooltip.fake_tooltip.save
    %span.arrow.top
    Remember to Save and Continue!
  / Modal
  #wizard-modal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :role => "dialog", :tabindex => "-1"}
    .modal-dialog
      .modal-content
        .modal-header
          %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
          %h4#myModalLabel.modal-title Welcome to Leasify's Website Wizard!
        .modal-body
          %p
            Leasify's Wizard will guide you through the entire website creation process. You may choose to use
            the wizard or you may choose to create your site manually by exiting the Wizard. Your choice!
          %p You're staying? Great! Let's fill out some basic information about your property!
        .modal-footer
          %button.btn.btn-info{"data-dismiss" => "modal", :type => "button"} Close
