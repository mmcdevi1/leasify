

<div class="availability-page">
  <div class="row">
    <div class="col-md-8">
      <h1><%= @availability.suite_or_floor + " #" + @availability.title %></h1>
      <div class="row-fluid">
        <div class="pull-left">
          <p><%= 51.ordinalize + " Floor" %>, <%= full_address %></p>
        </div>
      </div> 
    </div><!-- end col 8 -->
    <div class="col-md-4">
       
    </div>
  </div><!-- end row -->
  <div class="row">
    <div class="col-md-8">
      
   

<div id="carousel-example-generic" class="carousel slide m-b-lg img-thumbnail" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <% @availabilities_image.each_with_index do |index, i| %>
      <li data-target="#carousel-example-generic" data-slide-to="<%= i %>" class="<%= "active" if index == 0 %>"></li>
    <% end %>
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <% @availabilities_image.each_with_index do |image, index| %>
      <div class="item <%= "active" if index == 0 %>">
      <%= image_tag(image.availability_image.url(:large), class: "img-responsive") %>
      </div>
      <% end %>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>









      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Description</h3>
        </div>
        <div class="panel-body">
          <p><%= @availability.content %></p>
        </div>
      </div>
    </div><!-- end col 8 -->
    <div class="col-md-4">
      <div class="availability-stats">
        <p>Asking Rate: <span>$<%= @availability.rental_rate %> psf</span></p>
        <p>Total Area: <span><%= number_with_delimiter(@availability.sf, delimiter: ',') %> SF</span></p>
        <p>Availability: <span><%= @availability.availability %></span></p>
        <button class="btn btn-info btn-block btn-lg" data-toggle="modal" data-target="#modal-message">Send Message</button>
      </div>  
      <div class="availability-stats">
        <h3>Contacts</h3>
        <% @contacts.each do |contact| %>
          <%= contact.first_name + " " + contact.last_name %><br>
          <%= contact.job_title %><br>
          <%= contact.company %><br>
          <%= number_to_phone(contact.phone, area_code: true) %><br>
          <%= contact.email %>
        <% end %>
      </div>
          
    </div><!-- end col 4 -->
  </div><!-- end row -->
</div><!-- end availability page -->

<!-- Modal -->
<div class="modal fade" id="modal-message" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Modal title</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-info">Save changes</button>
      </div>
    </div>
  </div>
</div>


