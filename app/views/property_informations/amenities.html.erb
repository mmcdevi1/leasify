<%= form_for(@propertyinformations) do |f| %>
  <section class="scrollable wrapper w-f">
    <div class="panel-body">
      <%= render 'layouts/propertyheader' %>
      <div class="add-page">
        <div class="row">
          <div class="col-md-8">
            <h3 style="margin-bottom:30px;">Amenities</h3>
            <div class="row">
              <div class="col-md-2">
                <h4 style="margin:0;">Common</h4>
              </div>
              <div class="col-md-6">
              <% @amenities_common.each do |amenity| %>
              <div class="form-group">
                <div class="checkbox m-n i-checks">
                  <label>
                    <%= f.check_box amenity.name  %> 
                    <i></i>
                    <%= f.label amenity.name %>
                  </label>
                </div>
              </div><!-- end form group -->
              <% end %>
              </div>
            </div>
            <div class="row m-t m-b">
              <div class="col-md-2">
                <h4 style="margin:0;">Extra</h4>
              </div>
              <div class="col-md-6">
                <% @amenities_extra.each do |amenity| %>
                <div class="form-group">
                  <div class="checkbox m-n i-checks">
                    <label>
                      <%= f.check_box amenity.name  %> 
                      <i></i>
                      <%= f.label amenity.name %>
                    </label>
                  </div>
                </div><!-- end form group -->
                <% end %>
              </div>
            </div>
           
          </div>
        </div>
      </div>
    </div>
  </section>
  <footer class="footer bg-white b-t">
    <div class="row text-center-xs">
      <div class="col-md-12 text-right text-center-xs">                
        <%= f.submit "Save", class: "btn btn-success btn-more-padding" %>
      </div>
    </div>
  </footer>
<% end %>


























