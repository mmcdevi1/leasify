= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f|
  %section#content.wrapper-md.animated.fadeInUp
    .container.aside-xl
      %section.m-b-lg
        = devise_error_messages!
        %h3 Create your Leasify Account
        .form-group
          = f.text_field :first_name, class: "form-control", placeholder: "First Name"
        .form-group
          = f.text_field :last_name, class: "form-control", placeholder: "Last Name"
        .form-group
          = f.text_field :username, class: "form-control", placeholder: "Username"
        .form-group
          = f.email_field :email, :required => true, class: "form-control", placeholder: "Email Address"
        .form-group
          = f.password_field :password, :required => true, class: "form-control", placeholder: "Password"
        .form-group
          = f.password_field :password_confirmation, :required => true, class: "form-control", placeholder: "Confirm Password"
        /
          <p class="text-muted">By signing up, I agree to Leasify's <haml_silent>
          </haml_silent>
          and <haml_silent></haml_silent>.</p>
        .form-actions
          = f.submit "Register".upcase, class: "btn btn-lg btn-info btn-block"
        %p.m-t-sm.text-muted
          Already have an account? #{link_to 'Log in', new_user_session_path}
