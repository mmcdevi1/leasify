<!DOCTYPE html>
<html>
<head>
  <title><%= @propertyinformation.name %></title>
  <%= stylesheet_link_tag "bootstrap.css", "bootstrap-wysihtml5.css", "livingston.css", "leasing.css" %>
 	<%= javascript_include_tag "jquery", "bootstrap", "app", "jquery.slimscroll.min", "app.plugin" %>
  <%= csrf_meta_tags %>

  <% if Rails.env.production? %>
  <!-- For leasify.co -->
  <script type="text/javascript" src="//use.typekit.net/ckw2lgb.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <% elsif Rails.env.development? %>
	<!-- for lvh.me, remove when pushing to git and heroku -->
	<script type="text/javascript" src="//use.typekit.net/bgg6ayr.js"></script>
	<script type="text/javascript">try{Typekit.load();}catch(e){}</script>
  <% end %>

  <style type="text/css">
    header ul li a {
      color: <%= @themeoptions.nav_color %>;
      font-size: <%= @themeoptions.nav_size.to_s %>px;
    }
    header ul li a:hover {
      color: <%= @themeoptions.navhover_color %> !important;
    }
    footer p {
      color: <%= @themeoptions.footer_color %>;
      font-size: <%= @themeoptions.footer_size %>px;
    }
    a.customize-link,
    .page-content a {
      color: <%= @themeoptions.link_color %>;
    }
    
    .page-content p,
    .page-content {
      color: <%= @themeoptions.body_color %>;
      font-size: <%= @themeoptions.body_size %>px;
    }
    .subpage-customize h1{
      <% if @themeoptions.page_title_color == "#fff" %>
      color: #000;
      <% else %>
      color: <%= @themeoptions.page_title_color %>;
      <% end %>
      font-size: <%= @themeoptions.page_title_size %>px;
    }
    .subpage-customize p{
      <% if @themeoptions.page_subtitle_color == "#fff" %>
      color: #000;
      <% else %>
      color: <%= @themeoptions.page_subtitle_color %>;
      <% end %>
      font-size: <%= @themeoptions.page_subtitle_size %>px;
    }
    .page-content h1,
    .page-content h2,
    .page-content h3,
    .page-content h4,
    .page-content h5,
    .page-content h6 {
      color: <%= @themeoptions.body_heading_color %> ;
    }
    h1, h2, h3, h4, h5, h6 {
      text-transform: <%= @themeoptions.heading_text_transform %>; 
       <%= font_name_for_heading_css.html_safe %>
    }
    .welcome-box h1 {
      font-size: <%= @themeoptions.mainheading_size %>px;
      color: <%= @themeoptions.mainheading_color %>;
    }
    .welcome-box p {
      font-size: <%= @themeoptions.subheading_size %>px;
      color: <%= @themeoptions.subheading_color %>;
    }
    body {
      <%= font_name_for_body_css.html_safe %>
    }

    <% if @themeoptions.nav_color == "#fff" %>
      header ul li a {
      color: #999;
      }
    <% end %>
    <% if @themeoptions.mainheading_color == "#fff" %>
      .welcome-box h1 {
        color: #000;
      }
    <% end %>
    <% if @themeoptions.subheading_color == "#fff" %>
      .welcome-box p {
        color: #000;
      }
    <% end %>
  </style>
</head>




























