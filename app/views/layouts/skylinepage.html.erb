<%= render 'layouts/skyline/head' %>
	<body class="skyline subpage <%= @themeoptions.body_font %> <%= @themeoptions.heading_font %>">
		<%= render 'layouts/skyline/subpage_header' %>
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="subpage-img-bg" style="background: url('<%= @page.page_image.url(:xlarge) %>');
					-webkit-background-size: cover; -moz-background-size: cover; 
					-o-background-size: cover; background-size: cover;">
					<div class="subpage-customize">
						<h1 style="font-size: <%= @themeoptions.page_title_size %>px; color: <%= @themeoptions.page_title_color %>"><%= @page.title %></h1>
						<p style="font-size: <%= @themeoptions.page_subtitle_size %>px; color: <%= @themeoptions.page_subtitle_color %>"><%= @page.subtitle %></p>
					</div>
					</div>
					<div class="row">
						<div class="col-md-10 col-md-offset-1">
							<div class="page-content">
								<%= markdown(@page.content) %>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
		<%= render 'layouts/skyline/footer' %>
	</body>
</html>	