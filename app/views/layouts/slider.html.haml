!!!
%html
  %body
    = render 'layouts/head'
    :css
      html,body{height:100%;}
      		.carousel,.item,.active{height:100%;}
      		.carousel-inner, .carousel-caption{height:100%;}
      		.fill{width:100%;height:100%;background-position:center;background-size:cover;}
      
      		/* faster sliding speed */
      		.carousel-inner > .item {
      		    -webkit-transition: 0.3s ease-in-out left;
      		    -moz-transition: 0.3s ease-in-out left;
      		    -o-transition: 0.3s ease-in-out left;
      		    transition: 0.3s ease-in-out left;
      		}
      
      		/* keep full widget on smaller screens */
      		@media (max-width: 767px) { 
      			body {
      				padding-left: 0;
      				padding-right: 0;
      			}
      		}
      
      		* {
      	outline: none !important;
      	margin: 0; 
      	padding: 0;
      }
      #page {
      	display:table;
      	overflow:hidden;
      	margin:0px auto;
      }
      *:first-child+html #page {
      	position:relative;
      }/*ie7*/
      * html #page {
      	position:relative;
      }/*ie6*/
      
      #content_container{
      	display:table-cell;
      	vertical-align: middle;
      }
      *:first-child+html #content_container{
      	position:absolute;
      	top:50%;
      	}/*ie7*/
      * html #content_container{
      	position:absolute;
      	top:50%;
      	}/*ie6*/
      
      *:first-child+html #content{
      	position:relative;
      	top:-50%;
      	}/*ie7*/
      * html #content{
      	position:relative;
      	top:-50%;
      	}/*ie6*/
      
      #page{
      	height:100%;
      	width:465px;
      }
      .welcome-box {
      				width: 700px;
      				text-align: center;
      				background: rgba(0,0,0,0.95);
      				padding: 60px;
      			
      			}
      .welcome-box 	h1 {
      					margin-bottom: 10px;
      					font-size: 50px;
      				}
    .containers.fill
      #myCarousel.carousel.slide
        .carousel-caption
          #page
            #content_container
              #content
                .welcome-box
                  .m-b-lg
                    %h1 test
                    %p test
                  %p.uppercase test
                  .line
                  %p test
          / end container
        .carousel-inner
          - @homepage_gallery.each_with_index do |image, index|
            %div{:class => "item #{"active" if index == 0}"}
              .fill{:style => "background-image:url('#{image.homepage_gallery_image}');"}
                .container
        .pull-center
          %a.carousel-control.left{"data-slide" => "prev", :href => "#myCarousel"} ‹
          %a.carousel-control.right{"data-slide" => "next", :href => "#myCarousel"} ›
    %div
      hwllo world
    :javascript
      $('.carousel').carousel();
