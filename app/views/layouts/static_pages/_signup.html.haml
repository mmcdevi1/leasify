%section#call_to_action.call-to-action.email_signup
  .container
    %div
      .row
        .col-lg-12.center
          %h3
            %u Leasify isn't quite ready yet.
          %h2 Sign up and get notified when we're ready!
          .row
            .col-lg-10.col-lg-offset-1
      / end row
      .row.center.m-t-lg.m-b
        .col-lg-12
          / Begin MailChimp Signup Form
          #mc_embed_signup
            %form#mc-embedded-subscribe-form.validate.form-inline{:action => "http://60eastdesigns.us6.list-manage.com/subscribe/post?u=80b4bb8d4b9533c6178a337ee&id=41468633f0", :method => "post", :name => "mc-embedded-subscribe-form", :novalidate => "", :role => "form", :target => "_blank"}
              .form-group
                %label.sr-only{:for => "exampleInputEmail2"} Email address
                %input#mce-EMAIL.email_sign_up.required.email{:name => "EMAIL", :placeholder => "Enter email", :type => "email"}/
              %input.btn.btn-info.btn-lg.uppercase.brandon-bold{:id => "mc-embedded-subscribe emailbtn", :name => "subscribe", :type => "submit", :value => "Send"}/
              #mce-responses.clear{:style => "position: absolute; left: -5000px;"}
                #mce-error-response.response{:style => "display:none"}
                #mce-success-response.response{:style => "display:none"}
              / real people should not fill this in and expect good things - do not remove this or risk form bot signups
              %div{:style => "position: absolute; left: -5000px;"}
                %input{:name => "b_80b4bb8d4b9533c6178a337ee_41468633f0", :type => "text", :value => ""}/
              %p#thanks{:style => "margin:30px 0;"} Thank you! We will notify you as soon as we launch!
          / End mc_embed_signup
  / end of div scrolling effect
:javascript
  $(document).ready(function() {
    $("#thanks").hide();
    $('#emailbtn').click(function() {
      $("#thanks").fadeIn('fast');
    });
  });
