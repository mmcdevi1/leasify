<% unless @sidebar_links.empty? %>
<header class="header bg-white b-b clearfix">
  <div class="row m-t-sm">
    <div class="col-sm-8 m-b-xs">
      <div class="btn-group">
        <button type="button" class="btn btn-sm btn-default" title="Refresh">
          <i class="fa fa-refresh"></i>
        </button>
        <button type="button" class="btn btn-sm btn-default" title="Remove">
          <i class="fa fa-trash-o"></i>
        </button>
        <button type="button" class="btn btn-sm btn-default" title="Filter" data-toggle="dropdown">
          <i class="fa fa-filter"></i> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
          <li><a href="#">Action</a></li>
          <li><a href="#">Another action</a></li>
          <li><a href="#">Something else here</a></li>
          <li class="divider"></li>
          <li><a href="#">Separated link</a></li>
        </ul>
      </div>
      <%= link_to admin_sidebar_new_path, class: "btn btn-sm btn-default" do %>
        <i class="fa fa-plus"></i> New Sidebar Link
      <% end %>
    </div>
    <div class="col-sm-4 m-b-xs">
      <div class="input-group">
        <input type="text" class="input-sm form-control input-header" placeholder="Search">
        <span class="input-group-btn">
          <button class="btn btn-sm btn-default" type="button">Go!</button>
        </span>
      </div>
    </div>
  </div>
</header>
<% end %>
<section class="scrollable wrapper w-f">
  <% if @sidebar_links.empty? %>
    <div class="center">
      <h1>You don't have any sidebar links created!</h1>
      <p class="m-b-md">Create sidebar links to include in your website.</p>
      <%= link_to 'New theme', new_theme_path, class: "btn btn-success" %>
    </div>
  <% else %>
  <h3 class="m-t-none m-b-md">Themes</h3>
  <section class="panel panel-default">
    <div class="table-responsive">
      <table class="table table-striped m-b-none sidebar_links">
        <thead>
          <tr>
            <th width="20">
              <label class="checkbox m-n i-checks">
                <input type="checkbox">
                <i></i>
              </label>
            </th>
            <th class="name" data-toggle="class">Menu Name</th>
            <th class="date">Date Created</th>
            <th width="30"></th>
          </tr>
        </thead>
        <tbody>
          <% @sidebar_links.each do |sidebar| %>
          <tr class="table-edit">
            <td><label class="checkbox m-n i-checks"><input type="checkbox" name="ids[]"><i></i></label></td>
            <td>
              <%= link_to sidebar.name, "#", class: "pull-left m-r-sm" %> 
              <ul class="edit-links">
                <li><%= link_to "Edit", admin_sidebar_edit_path(sidebar) %> | </li> 
                <li><%= link_to "View", admin_sidebar_show_path(sidebar) %></li>
              </ul>
            </td>
            <td><%= sidebar.created_at.strftime("%B %e, %Y") %></td>
            <td>
              <a href="" data-toggle="modal" data-target="#sidebar<%= sidebar.id %>">
                <i class="fa fa-trash-o"></i>
              </a>
            </td>
          </tr>
           <!-- Modal -->
          <div class="modal fade" id="sidebar<%= sidebar.id %>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog">
              <div class="modal-content">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                  <h4 class="modal-title" id="myModalLabel">Are you sure?</h4>
                </div>
                <div class="modal-body">
                  Once the sidebar is deleted, it's gone forever!
                </div>
                <div class="modal-footer">
                  <button type="button" class="btn btn-link" data-dismiss="modal">Close</button>
                  <%= link_to "Delete", sidebar, method: :delete, class: "btn btn-danger" %>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </tbody>
      </table>
    </div>
  </section>
  <% end %>



</section>








































