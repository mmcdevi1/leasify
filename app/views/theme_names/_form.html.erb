<%= form_for(@theme_name) do |f| %>
  <% if @theme_name.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@theme_name.errors.count, "error") %> prohibited this theme_name from being saved:</h2>

      <ul>
      <% @theme_name.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <section class="scrollable wrapper w-f">
    <div class="panel-body">
      <div class="add-page">
        <h3><%= @title %></h3>
        <div class="row">
          <div class="col-md-12">
            <div class="add-page-image  m-t-lg">
              <div class="row-fluid">
                <%= f.file_field :theme_name_image, as: :file, class: "filestyle", id: "lefile", style: "position: fixed; left: -500px;" %>
                <div class="bootstrap-filestyle" style="display: inline;">
                  <label for="lefile" class="btn btn-default btn-square">
                    <i class="i i-images"></i><br>
                    <span>Upload Image</span>
                  </label>
                </div>
              </div>
               <% if f.object.theme_name_image? %>
                <div class="upload-preview-options">
                  <%= image_tag(@theme_name.theme_name_image.url(:thumb), id: "pageimage", class: "img-thumbnail") %>
                </div>
              <% else %>
                <div class="upload-preview-options">
                  <%= image_tag("blank.gif", id: "pageimage") %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md-8">
            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :description %>
              <%= f.text_field :description, class: "form-control" %>
            </div>
          </div>
        </div>
     </div>
  </div>
</section>
<footer class="footer bg-white b-t">
  <div class="row text-center-xs">
    <div class="col-md-6 hidden-sm">
      
    </div>
    <div class="col-md-6 col-sm-12 text-right text-center-xs">                
      <%= f.submit "Save", class: "btn btn-success btn-more-padding" %>
    </div>
  </div>
</footer>
<% end %>



































